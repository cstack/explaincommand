<% content_for :content do %>
<h1><a href="/">ExplainCommand</a></h1>
<form action="/explain" method="get">
  <input id="top-search" name="cmd" type="text" autocapitalize="off" autocorrect="off" placeholder="explain...">
</form>
<h2>Examples</h2>
<ul>
<% @examples.each do |example| %>
  <li>
    <a href="/explain?cmd=<%= ERB::Util.url_encode(example) %>"><%= example %></a>
  </li>
<% end %>
</ul>
<hr>
<p><a href="https://github.com/cstack/explaincommand">View on Github</a></p>
<% end %>
<%= render template: "layouts/application" %>